  .contents__top
    %h1.name
      アーノルドパーマーのキャスケット
    .main
      .image
        = image_tag src='m29866801387_1.jpg', alt: "image",size:'300x300', id:'pic1', class:'image'
        .small
          = image_tag src='m29866801387_1.jpg', alt: "image",size:'60x60', id:'pic1', class:'image'
          = image_tag src='m29866801387_2.jpg', alt: "image",size:'60x60', id:'pic2', class:'image'
